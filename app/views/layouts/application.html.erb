<!DOCTYPE html>
<html>
<head>
  <title>Vitriol</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Oswald:700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Cabin:700' rel='stylesheet' type='text/css'>
</head>
<body>
  <div id="wrapper">

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>

  <% if current_user %>
  <div class="panel">
    <div class="home">
      <span class="close">X</span>
      <div id="the_user_img"></div>
      <h1 id="the_username"></h1>
  
      <div id="header" class="row">
        <h3 id="followed_header">Enter New Topic:</h3>
        <label for="input_title">Title:</label>
        <input id="input_title" placeholder="title"><br \>
        <label for="input_link">Link:</label>
        <input id="input_link" placeholder="source link" value="http://">
        <br />
        <textarea id="input_body" maxlength="600" placeholder="topic body"></textarea>
        <br />
        <button class="add button">Add Topic</button>
      </div>
      
      <h3 id="followed_header">Your Topics:</h3><hr>
      <ul id="followed_topics"></ul>
    </div>
  </div>

  <script> window.user_id = <%= current_user.id %> </script>
  <script> window.username = "<%= current_user.username %>" </script>
  <script> window.img_url = "<%= current_user.img_url %>" </script>
  
  <% end %>
</body>
</html>
